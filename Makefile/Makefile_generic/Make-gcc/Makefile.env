#======================================================================
# select which tools to use as compiler, 
# librarian and linker
#======================================================================
# 		CFLAGS
# CFLAGS		+= -std=c99 
CFLAGS 		+= -Wall -O1 -Os
CFLAGS		+= -funsigned-char -funsigned-bitfields -fpack-struct -fshort-enums
CFLAGS		+= $(addprefix -I,$(ROOT_BASE))
CFLAGS		+= $(addprefix -I,$(PRJ_BASE))

# CFLAGS
# CXXFLAGS	+= -std=c++11
CXXFLAGS	+= 
CXXFLAGS	+= $(addprefix -I,$(ROOT_BASE))
CXXFLAGS	+= $(addprefix -I,$(PRJ_BASE))
#======================================================================
# select which tools to use as compiler, librarian and linker
#======================================================================
AR = ar
ARFLAGS = rv
#======================================================================
# select which tools to use as compiler, librarian and linker
CCX_FLAG	:= $(suffix $(PRJ_SRC_CPP))

ifeq ($(CCX_FLAG), .cpp)
	CCX := $(CXX)
	CCXFLAGS := $(CXXFLAGS)
else
	CCX := $(CC)
	CCXFLAGS := $(CFLAGS)
endif

#======================================================================
all: checkdirs build $(PROGRAMS)

build: checkdirs build-obj

build-obj: $(PRJ_DEP) $(PRJ_OBJ) 

$(BUILD_BASE)/%.o: $(PRJ_BASE)/%.c
	$(CC) $(CFLAGS) $(MLD_INC) -c $< -o $@

$(BUILD_BASE)/%.o: $(PRJ_BASE)/%.cpp
	$(CXX) $(CXXFLAGS) $(MLD_INC) -c $< -o $@	

checkdirs: $(BUILD_DIR) $(BUILD_TEST_DIR)
$(BUILD_DIR):
	$(Q) mkdir -p $@

$(BUILD_TEST_DIR):
	$(Q) mkdir -p $@

clean:
	rm -rf $(BUILD_MDL_DIR)
